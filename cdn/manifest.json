  "shortcuts": [
    {
      "name": "Search Tools",
      "short_name": "Search",
      "description": "Search for tools by name or category",
      "url": "./?action=search",
      "icons": [
        {
          "src": "./cdn/images/icon-search.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Popular Tools",
      "short_name": "Popular",
      "description": "View the most popular tools",
      "url": "./?category=popular",
      "icons": [
        {
          "src": "./cdn/images/icon-popular.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Design Tools",
      "short_name": "Design",
      "description": "Browse design and creative tools",
      "url": "./?category=design",
      "icons": [
        {
          "src": "./cdn/images/icon-design.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "AI Tools",
      "short_name": "AI",
      "description": "Discover AI-powered tools",
      "url": "./?category=ai",
      "icons": [
        {
          "src": "./cdn/images/icon-ai.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "web",
      "url": "https://toolfinder.app"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "file_handlers": [
    {
      "action": "./",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+toolfinder",
      "url": "./?tool=%s"
    }
  ],
  "share_target": {
    "action": "./share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
